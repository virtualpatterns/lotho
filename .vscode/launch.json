  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Test",
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "preLaunchTask": "Build",
      "args": [
        "--bail", 
        "--timeout", "0",
        "${workspaceFolder}/distributable/test/lotho.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch ...",
      "program": "${workspaceFolder}/distributable/lotho.js",
      "preLaunchTask": "Build",
      "args": [
        "--configuration-path", "${workspaceFolder}/resource/test/lotho/run-schedule/configuration.json",
        "--log-level", "trace",
        "run-schedule", "@virtualpatterns/lotho"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}