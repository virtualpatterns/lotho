{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": "error",
    "comma-dangle": "off",
    "indent": [ "error", 2, { "SwitchCase": 1 } ],
    "linebreak-style": [ "error", "unix" ],
    "no-async-promise-executor": "off",
    "no-console": "warn",
    "no-prototype-builtins": "off",
    "no-unused-vars": "warn",
    "quotes": [ "error", "single" ],
    "semi": "off"
  }
}
